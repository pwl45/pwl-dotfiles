FROM ubuntu:22.04

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install required packages
RUN apt-get update && apt-get install -y \
    curl \
    git \
    sudo \
    xz-utils \
    && rm -rf /var/lib/apt/lists/*

# Create test user with sudo privileges
RUN useradd -m -s /bin/bash testuser && \
    usermod -aG sudo testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy dotfiles to test user home
COPY . /home/testuser/pwl-dotfiles
RUN chown -R testuser:testuser /home/testuser

# Switch to test user
USER testuser
WORKDIR /home/testuser/pwl-dotfiles

# Set HOME environment variable explicitly
ENV HOME=/home/testuser

# Run the bootstrap script
CMD ["./home-manager-bootstrap.sh"]